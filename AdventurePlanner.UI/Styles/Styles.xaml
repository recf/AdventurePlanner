<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro">
    <Style TargetType="{x:Type controls:MetroContentControl}">
        <Setter Property="Padding" Value="10,10,10,10"/>
    </Style>
    <Style TargetType="{x:Type GridSplitter}">
        <Setter Property="Margin" Value="10"/>
    </Style>


    <Style TargetType="{x:Type Run}" x:Key="FontIcon">
        <Setter Property="FontFamily" Value="Segoe UI Symbol" />
    </Style>
    <Style TargetType="{x:Type Run}" x:Key="AddIcon" BasedOn="{StaticResource FontIcon}">
        <Setter Property="Text" Value="" />
    </Style>
    <Style TargetType="{x:Type Run}" x:Key="RemoveIcon" BasedOn="{StaticResource FontIcon}">
        <Setter Property="Text" Value="" />
    </Style>
</ResourceDictionary>